{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice for the Chatterbox web application",
  "main": "dist/server",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.prod.json",
    "start": "node -r dotenv/config dist/server",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "lint": "eslint --fix \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --setupFiles dotenv/config --config ./jest-e2e.config.ts"
  },
  "dependencies": {
    "@chttrbx/common": "^2.0.0",
    "awilix": "^5.0.1",
    "axios": "^0.21.3",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^5.0.0-alpha.8",
    "joi": "^17.4.2",
    "mongodb": "^4.1.1",
    "mongoose": "^6.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
