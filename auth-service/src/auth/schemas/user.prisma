model User {
  id                String  @id @db.ObjectId @default(dbgenerated()) @map("_id")
  sub               String  @unique
  username          String  @unique
  email             String  @unique
  avatarUrl         String?
  password          String?
  verified          Boolean @default(false)
  verificationToken String? @unique
  resetToken        String? @unique
  
  @@map("users")
}