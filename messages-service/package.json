{
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.prod.json",
    "start": "node -r dotenv/config dist/server",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "migrate": "node-pg-migrate",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --setupFiles dotenv/config --config ./jest-e2e.config.ts"
  },
  "dependencies": {
    "@chttrbx/common": "^2.5.0",
    "@socket.io/redis-adapter": "^7.1.0",
    "awilix": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^5.0.0-alpha.8",
    "ioredis": "^4.28.2",
    "joi": "^17.5.0",
    "node-pg-migrate": "^6.2.0",
    "pg": "^8.7.1",
    "socket.io": "^4.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.5",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "socket.io-client": "^4.4.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
