{
  "name": "messages-service",
  "version": "1.0.0",
  "description": "Messages microservice for the Chatterbox web application",
  "main": "dist/server",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.prod.json",
    "start": "node -r dotenv/config dist/server",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "migrate": "node-pg-migrate",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --setupFiles dotenv/config --config ./jest-e2e.config.ts"
  },
  "dependencies": {
    "@chttrbx/common": "^2.5.0",
    "@socket.io/redis-adapter": "^7.0.0",
    "awilix": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^5.0.0-alpha.8",
    "ioredis": "^4.27.9",
    "joi": "^17.4.2",
    "node-pg-migrate": "^5.10.0",
    "pg": "^8.7.1",
    "socket.io": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.27.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "socket.io-client": "^4.2.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
