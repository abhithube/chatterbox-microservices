{
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "start": "node -r dotenv/config dist/server",
    "dev": "nodemon -r dotenv/config src/server.ts",
    "lint": "eslint --fix \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@chttrbx/common": "^2.5.0",
    "@sendgrid/mail": "^7.6.0",
    "awilix": "^6.0.0",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "lint-staged": "^12.1.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
